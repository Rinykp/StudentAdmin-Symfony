{% extends 'dashboard/index.html.twig' %}

{% block title %}Division index{% endblock %}

{% block content %}

<div class="col-sm-9">
    <h1>Division index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for division in divisions %}
            <tr>
                <td>{{ division.id }}</td>
                <td>{{ division.name }}</td>
                <td>
                    <a  class="btn btn-success" href="{{ path('app_division_show', {'id': division.id}) }}">show</a>
                    <a  class="btn btn-warning" href="{{ path('app_division_edit', {'id': division.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  class="btn btn-primary" href="{{ path('app_division_new') }}">Create new</a>
</div>
{% endblock %}
