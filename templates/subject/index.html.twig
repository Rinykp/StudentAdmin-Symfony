{% extends 'dashboard/index.html.twig' %}

{% block title %}Subject index{% endblock %}

{% block content %}

<div class="col-sm-9">
    <h1>Subject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.name }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_subject_show', {'id': subject.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_subject_edit', {'id': subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  class="btn btn-primary" href="{{ path('app_subject_new') }}">Create new</a>
</div>
{% endblock %}
