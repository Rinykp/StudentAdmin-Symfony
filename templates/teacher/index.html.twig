{% extends 'dashboard/index.html.twig' %}

{% block title %}Teacher index{% endblock %}

{% block content %}

<div class="col-sm-9">    <h1>Teacher index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subjects</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.name }}</td>
                <td>{{ teacher.email }}</td>
                <td>{{ teacher.subject }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_teacher_show', {'id': teacher.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_teacher_edit', {'id': teacher.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_teacher_new') }}">Create new</a>
</div>
{% endblock %}
